            "Get-ChildItem -Path \"$dir\\Chrome-bin\\*\" -Recurse -Force | Remove-Item -Recurse -Force",
            "Remove-Item -Path \"$dir\\Chrome-bin\" -Recurse -Force"
        ]
    },
    "bin": "chrome.exe",
    "shortcuts": [
        [
            "chrome.exe",
            "Google Chrome"
        ]
    ],
    "checkver": {
        "url": "https://www.chrome-portable.com/index.php/google-chrome-offline-installer/",
        "regex": "(?sm)Version:\\s+([\\d\\.]+).*release2/chrome/(?<32>[\\w-]+)_\\d+.*release2/chrome/(?<64>[\\w-]+)_\\d+.*Download 64-bit"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://dl.google.com/release2/chrome/$match64_$version/$version_chrome_installer.exe#/dl.7z"
            },
            "32bit": {
                "url": "https://dl.google.com/release2/chrome/$match32_$version/$version_chrome_installer.exe#/dl.7z"
            }
